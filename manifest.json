{
    "manifest_version": 3,
    "name": "ScamShield",
    "description": "Blocks phishing-like websites using domain lists, keywords and suspicious URL patterns.",
    "version": "1.0",
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "ScamShield"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}